<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:titleTextAppearance="@style/TextAppearance.UniVoice.title4Regular"
            app:navigationIcon="@drawable/ic_left_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_name_input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학생증 인증"
                android:textAppearance="@style/TextAppearance.UniVoice.title4Regular" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_name_input_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_name_input">

            <TextView
                android:id="@+id/tv_name_input_explain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이름과 학번을 적어주세요"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="38dp"
                android:textAppearance="@style/TextAppearance.UniVoice.title2Semi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_input_explain_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="학생증에 기재된 것과 동일해야 해요"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="17dp"
                android:textAppearance="@style/TextAppearance.UniVoice.body2Regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_input_explain" />

            <EditText
                android:id="@+id/et_name_input_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:textColor="@color/font_B01"
                android:textColorHint="@color/font_B04"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/et_mint_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_input_explain_detail" />

            <EditText
                android:id="@+id/et_name_input_student_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="전체 학번 ex. 2024123456"
                android:textColor="@color/font_B01"
                android:textColorHint="@color/font_B04"
                android:layout_marginTop="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/et_mint_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_name_input_name" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_name_input_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="다음"
                android:background="@drawable/btn_radius_40dp_selector"
                android:textAppearance="@style/TextAppearance.UniVoice.title4Bold"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:enabled="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
