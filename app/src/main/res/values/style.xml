<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.My.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
        <item name="overlapAnchor"> false</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownWidth">match_parent</item>

    </style>

    <style name="SpinnerDivideStyle">
        <item name="android:divider">@color/gray_50</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="NoShadowPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@drawable/student_id_spinner</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:dropDownListViewStyle">@style/NoShadowListViewStyle</item>
    </style>

    <style name="NoShadowListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@drawable/student_id_spinner</item>
        <item name="android:divider">@color/gray_50</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_white_fill_top25_rect</item>
    </style>

</resources>