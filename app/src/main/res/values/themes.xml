<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.UniVoice" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/gray_100</item>
    </style>

    <style name="Theme.UniVoice" parent="Base.Theme.UniVoice" />

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="TransparentBottomSheetDialogFragment" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TransparentKeyboardBottomSheetDialogFragment" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="LoginButtonWithoutShadow" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/TextAppearance.UniVoice.title4Bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius8" parent="">
        <item name="cornerSize">8dp</item>
    </style>
</resources>